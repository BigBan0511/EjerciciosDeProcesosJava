class HiloConBandera implements Runnable{
	private volatile boolean running = true;
	
	@Override
	public void run() {
		while(running) {
			try {
				System.out.println("El hilo sigue ejecutandose.");
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				break;
			}
		}
		
		if(!running) {
			
		}
	}
}