package progSincro;

public class ejemplo3 {

	public static void main(String[] args) {
		

	}

}

class Buffer{
	private int capacidad = 10;
	private int contador = 0;
	
	public synchronized void producir() {
		if(capacidad < 10) {
			contador++;
		}
	}
	
	public synchronized void consumir() {
		if(capacidad > 0) {
			contador--;
		}
	}
	
	public int getContador() {
		return contador;
	}
}
